#set ($discard = $response.setContentType('application/json'))
#if ($request.action == 'find-updated-matches')
   #set ($servers = $request.servers)
   $services.matchingNotification.findMatches($servers, true)
#elseif ($request.action == 'find-all-matches')
   #set ($servers = $request.servers)
   $services.matchingNotification.findMatches($servers, false)
#elseif($request.action == 'show-matches')
   #set ($score = $request.score)
   #set ($phenScore = $request.phenScore)
   #set ($genScore = $request.genScore)
   #set ($notified = $request.notified)
   $services.matchingNotification.getMatches($score, $phenScore, $genScore, $notified)
#elseif ($request.action == 'send-notifications')
   #set ($ids = $!request.ids)
   $services.matchingNotification.sendNotifications($ids)
#elseif ($request.action == 'set-status')
   #set ($ids = $!request.ids)
   #set ($status = $!request.status)
   $services.matchingNotification.setStatus($ids, $status)
#end
{{/velocity}}</content>
